{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true // Manter se você tem ou pode ter outros arquivos JS que o TS deve processar
  },
  "include": ["src/**/*.ts", "src/**/*.js"], // Incluir arquivos .js se 'allowJs' estiver true e você tiver .js em 'src'
  "exclude": ["node_modules", "dist"] // REMOVER "database.js" ou "database.ts" daqui
}
